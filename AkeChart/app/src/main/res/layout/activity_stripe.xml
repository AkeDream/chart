<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <Button
        android:text="开始"
        android:id="@+id/btn_start"
        android:onClick="btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.wifieye.akechartdemo.strip.StripeProgressBar
        android:id="@+id/stripe_progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        app:progress_radius="10dp"
        app:progress_max="100"
        app:progress_background="@color/sp_progress_background"
        app:progress_image="@drawable/img_stripe_progress"
        android:layout_height="20dp"/>

    <com.wifieye.akechartdemo.strip.StripeProgressBar
        android:id="@+id/stripe_progress_bar1"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        app:progress_radius="10dp"
        android:layout_marginTop="10dp"
        app:progress_max="100"
        app:progress_background="@color/sp_progress_background"
        app:progress_image="@drawable/img_stripe_progress"
        android:layout_height="20dp"/>


    <TextView
        android:id="@+id/tv_progress"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.wifieye.akechartdemo.strip.DrawGradView
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.wifieye.akechartdemo.strip.DrawView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.wifieye.akechartdemo.strip.ProgressWaveView
        android:id="@+id/wave_view"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginStart="90dp"/>

    <com.wifieye.akechartdemo.strip.LineView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>